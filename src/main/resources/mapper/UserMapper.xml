<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kitri.web_project.mybatis.mappers.UserMapper">

    <insert id="signup" parameterType="com.kitri.web_project.signup.dto.SignUpDto">
        INSERT INTO user (email, nick_name, password, address)
        VALUES (#{email}, #{name}, #{password}, #{address})
    </insert>

    <select id="findMember" parameterType="string" resultType="com.kitri.web_project.signup.dto.ResponseUser">
        SELECT nick_name, email
        FROM user
        WHERE nick_name = #{name}
          OR email = #{email}
    </select>

    <select id="memberInfo" parameterType="com.kitri.web_project.signup.dto.SignUpDto" resultType="com.kitri.web_project.signup.dto.SignUpDto">
        SELECT * FROM user
    </select>
</mapper>

